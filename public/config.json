{
    "workflowApiVersion": "1.1",
    "metaData": {
      "icon": "images/LOGO.png",
    //  "isConfigured":"true",
      "category": "message"
    },
    "type": "REST",
    "lang": {
      "en-US": {
        "name": "Custom Activity ComponentDateTimeDelta",
        "description": "Journey Builder Custom Activity for Date time Delta API v1.1 format."
      }
    },
    "arguments": {
      "execute": {
        "inArguments": [
          {
          //  "staticValue": "2024-12-18 01:06:51",
            "future_date": "{{InteractionDefaults.TriggerTime}}"
          },
          {
            "user_timezone": "{{Contact.Default.timezone}}"
          }
        ],
        "outArguments": [
          {
            "foundSignupDate": ""
          }
        ],
        "url": "https://jbca-datetimedelta-api.onrender.com"
      }
    },
    "configurationArguments": {
      "save": {
        "url": "https://jbca-datetimedelta-api.onrender.com"
      },
      "publish": {
        "url": "https://jbca-datetimedelta-api.onrender.com"
      },
      "validate": {
        "url": "https://jbca-datetimedelta-api.onrender.com"
      },
      "stop": {
        "url": "https://jbca-datetimedelta-api.onrender.com"
      }
    },
    "wizardSteps": [
      { "label": "Step 1", "key": "step1" },
      { "label": "Step 2", "key": "step2" },
      { "label": "Step 3", "key": "step3" },
      { "label": "Step 4", "key": "step4", "active": false }
    ],
    "userInterfaces": {
      "configModal": {
        "height": 200,
        "width": 300,
        "fullscreen": true
      }
    },
    "schema": {
      "arguments": {
        "execute": {
          "inArguments": [
            {
              "future_date": {
                "dataType": "Date",
                "isNullable": false,
                "direction": "in"
              }
            },
            {
              "user_timezone": {
                "dataType": "Text",
                "isNullable": false,
                "direction": "in"
              }
            }
          ],
          "outArguments": [
            {
              "foundSignupDate": {
                "dataType": "Delta",
                "direction": "out",
                "access": "visible"
              }
            }
          ]
        }
      }
    }
  }
