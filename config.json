{
    "workflowApiVersion": "1.1",
    "metaData": {
      "icon": "images/LOGO.png",
      "category": "message"
    },
    "type": "REST",
    "lang": {
      "en-US": {
        "name": "Custom Activity Component-DateTimeDelta",
        "description": "Journey Builder Custom Activity for Date time Delta API v1.1 format."
      }
    },
    "arguments": {
      "execute": {
        "inArguments": [
          {
            "future_date": "{{InteractionDefaults.TriggerTime}}"
          },
          {
            "user_timezone": "{{Contact.Default.timezone}}"
          }
        ],
        "outArguments": [
          {
            "foundSignupDate": ""
          }
        ],
        "url": "https://some-endpoint.com/execute"
      }
    },
    "configurationArguments": {
      "save": {
        "url": "URI/for/your/activity/save"
      },
      "publish": {
        "url": "URI/for/your/activity/publish"
      },
      "validate": {
        "url": "URI/for/your/activity/validate"
      },
      "stop": {
        "url": "URI/for/your/activity/stop"
      }
    },
    "wizardSteps": [
      { "label": "Step 1", "key": "step1" },
      { "label": "Step 2", "key": "step2" },
      { "label": "Step 3", "key": "step3" },
      { "label": "Step 4", "key": "step4", "active": false }
    ],
    "userInterfaces": {
      "configModal": {
        "height": 200,
        "width": 300,
        "fullscreen": true
      }
    },
    "schema": {
      "arguments": {
        "execute": {
          "inArguments": [
            {
              "phoneNumber": {
                "dataType": "future_date",
                "isNullable": false,
                "direction": "in"
              }
            },
            {
              "emailAddress": {
                "dataType": "user_timezone",
                "isNullable": false,
                "direction": "in"
              }
            }
          ],
          "outArguments": [
            {
              "foundSignupDate": {
                "dataType": "Delta",
                "direction": "out",
                "access": "visible"
              }
            }
          ]
        }
      }
    }
  }